<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PaymentActivity">


    <ImageView
        android:id="@+id/ivPayment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:src="@drawable/ic__llustration3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/tvMonthly"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:elevation="10dp"
        android:text="asdas"
        app:layout_constraintBottom_toBottomOf="@+id/ivMonthyl"
        app:layout_constraintStart_toStartOf="@+id/ivMonthyl"
        app:layout_constraintTop_toTopOf="@+id/ivMonthyl"
        app:layout_constraintVertical_bias="0.309" />

    <TextView
        android:id="@+id/tvYearly"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:elevation="10dp"
        android:text="asdas"
        app:layout_constraintBottom_toBottomOf="@+id/ivYearly"
        app:layout_constraintStart_toStartOf="@+id/ivYearly"
        app:layout_constraintTop_toTopOf="@+id/ivYearly"
        app:layout_constraintVertical_bias="0.318" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="120dp"
        android:elevation="10dp"
        android:src="@drawable/ic_label"
        app:layout_constraintBottom_toBottomOf="@+id/ivMonthyl"
        app:layout_constraintEnd_toEndOf="@+id/ivMonthyl"
        app:layout_constraintHorizontal_bias="0.911"
        app:layout_constraintStart_toStartOf="@+id/ivMonthyl" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="120dp"
        android:elevation="10dp"
        android:src="@drawable/ic_label_2"
        app:layout_constraintBottom_toBottomOf="@+id/ivYearly"
        app:layout_constraintEnd_toEndOf="@+id/ivYearly"
        app:layout_constraintHorizontal_bias="0.919"
        app:layout_constraintStart_toStartOf="@+id/ivYearly" />

    <TextView
        android:id="@+id/tvTitle2"
        style="@style/title"
        android:layout_width="289dp"
        android:layout_height="97dp"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:elevation="10dp"
        android:text="Get Unlimited Access!"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ivPayment" />

    <ImageView
        android:id="@+id/ivMonthyl"
        android:layout_width="156dp"
        android:layout_height="132dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="20dp"
        android:elevation="5dp"
        android:src="@drawable/buttonbg"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvTitle2" />

    <ImageView
        android:id="@+id/ivYearly"
        android:layout_width="156dp"
        android:layout_height="132dp"
        android:layout_marginStart="220dp"
        android:layout_marginTop="20dp"
        android:elevation="5dp"
        android:src="@drawable/buttonbg"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvTitle2" />

    <Button
        android:id="@+id/bvPremium"
        android:layout_width="186dp"
        android:layout_height="58dp"
        android:layout_marginTop="180dp"
        android:backgroundTint="#2C2B47"
        android:fontFamily="@font/acme"
        android:text="Go Premium"
        android:textAllCaps="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvTitle2" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:src="@drawable/ic_rectangle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bvPremium"
        app:layout_constraintVertical_bias="0.064" />


</androidx.constraintlayout.widget.ConstraintLayout>